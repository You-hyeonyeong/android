<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.weatherook.weatherook.ui.activity.WriteActivity">


    <RelativeLayout
        android:id="@+id/write_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="글쓰기"
            android:textSize="18sp" />

        <Button
            android:id="@+id/my_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"
            android:text="다음"
            android:textColor="#aaaaaa"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/write_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@+id/write_top">

        <LinearLayout
            android:id="@+id/write_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/write_date_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7월 10일"
                android:textColor="@color/weatherookTheme" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/write_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/write_date">

            <TextView
                android:id="@+id/write_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="서울시 마포구" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/write_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/write_location">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="기온" />

            <TextView
                android:id="@+id/write_temp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 / 20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/write_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/write_temp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="날씨" />

            <TextView
                android:id="@+id/write_weather_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맑음" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_below="@+id/write_info"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0" />

    <RelativeLayout
        android:id="@+id/write_write"
        android:layout_below="@+id/write_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fillViewport="true">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@null"
                android:ems="10"
                android:gravity="start|top"
                android:hint="글쓰기"
                android:maxEms="10"
                android:minHeight="230dp"
                android:scrollHorizontally="false" />

        </ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/write_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d0d0d0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="스타일"
                android:textSize="18sp" />
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="4">

            <TextView
                android:id="@+id/write_style1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_state"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="빈티지 스트릿"
                android:textIsSelectable="false"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/write_style2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_state"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="클래식 모던"
                android:textIsSelectable="false"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/write_style3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/rounded_state"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="캐주얼 유스"
                android:textIsSelectable="false"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/write_style4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_state"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="로맨틱 댄디"
                android:textIsSelectable="false"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/write_style5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/rounded_state"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="심플"
                android:textIsSelectable="false"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/write_style6"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/rounded_state"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="그 외"
                android:textIsSelectable="false"
                android:textSize="15sp" />
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d0d0d0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="공개 게시"
                android:textSize="18sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/write_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/public_state" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7a7a7a" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/following_write_profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/ic_launcher_background"

                />

            <EditText
                android:id="@+id/following_comment_write"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/following_write_profile"
                android:background="@null"
                android:focusable="true"
                android:hint="댓글..." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/weatherookTheme"
                android:layout_toRightOf="@id/following_comment_write"
                android:text="게시" />
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>
